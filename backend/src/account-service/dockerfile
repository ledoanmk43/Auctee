FROM golang:1.18-alpine AS build

WORKDIR /app

COPY go.* /

RUN go mod download

COPY pkg/ /pkg/

COPY src/admin-service/ /src/admin-service/

RUN CGO_ENABLED=0 GOOS=linux go build -o /main /src/admin-service/cmd/main.go

FROM scratch

WORKDIR /

COPY --from=build /main /main


EXPOSE 1001
EXPOSE 50051

#CMD [ "/admin-service" ]

ENTRYPOINT ["/main"]